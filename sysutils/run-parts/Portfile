PortSystem          1.0
PortGroup           github 1.0

github.setup        ikysil run-parts 1.0.0 v
github.tarball_from archive
revision            0

categories          sysutils
#license             
platforms           darwin

description         Run scripts or programs in a directory.

long_description    {*}${description} Bash-based implementation of run-parts \
                    - concept taken from Debian with extensions from Ubuntu.

maintainers         openmaintainer

checksums           rmd160  74bf430fcdfe816d27dcc7c64ccbfad2291a6ad0 \
                    sha256  abd7a324c0f11183f164044a18f1ebf526434e41619be4fb0ee25450ff9cb79b \
                    size    2654

use_configure       no

build {}

destroot {
    set bindir ${destroot}${prefix}/bin/${name}
    set docdir ${destroot}${prefix}/share/doc/${name}

    xinstall -m 0755 ${worksrcpath}/${name} ${bindir}

    xinstall -d ${docdir}
    xinstall -m 644 -W ${worksrcpath} README.md ${docdir}
}
